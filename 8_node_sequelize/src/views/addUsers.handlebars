<form action="/api/users/createUser" method="post">
    <div class="form-control">
        <label for="name">Nome:</label>
        <input type="text" name="name" placeholder="Digite o nome" required>
    </div>

    <div class="form-control">
        <label for="email">Email:</label>
        <input type="text" name="email" placeholder="Digite o email" required>
    </div>

    <div class="form-control">
        <label for="password">Senha:</label>
        <input type="text" name="password" placeholder="Digite a senha">
    </div>

    <div class="form-control">
        <label for="occupation">Ocupação:</label>
        <input type="text" name="occupation" placeholder="Digite sua profissão">
    </div>

    <div class="form-control form-checkbox">
        <input type="checkbox" name="newsletter" checked>
        <label for="checkbox">Enviar promoções?:</label>
    </div>

    <input type="submit" value="Cadastrar">
</form>